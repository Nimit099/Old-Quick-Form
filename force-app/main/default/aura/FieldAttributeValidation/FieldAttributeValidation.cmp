            <div class="textlabel">Validation</div>
            <div class="togglebox">
                <lightning:input type="toggle" label="Required Field" checked="{!v.WrapperList.AttributeList.Required_Field__c}" messageToggleActive="" messageToggleInactive="" />
            </div>
            <div class="textlabel">Statement Choices</div>
            <aura:iteration items="{!v.StatementList}" var="item" indexVar="index">
                <div class="Item" id="{!index}">
                    <lightning:input class="slds-size_5-of-6" variant="label-hidden" value="{!item}" onblur="{!c.changeStatement}" />
                    <lightning:buttonIcon class="slds-size_1-of-6" iconName="utility:delete" size="medium" name="{!item}" onclick="{!c.deleteStatement}" />
                </div>
            </aura:iteration>
            <div class="Itembutton">
                <lightning:button iconName="utility:add" title="Add" onclick="{!c.addStatement}"></lightning:button>
            </div>
            <div class="textlabel">Option Choices</div>
            <aura:iteration items="{!v.OptionList}" var="item" indexVar="index">
                <div class="Item" id="{!index}">
                    <lightning:input class="slds-size_5-of-6" variant="label-hidden" value="{!item}" onblur="{!c.changeOption}" />
                    <lightning:buttonIcon class="slds-size_1-of-6" iconName="utility:delete" size="medium" name="{!item}" onclick="{!c.deleteOption}" />
                </div>
            </aura:iteration>
            <div class="Itembutton">
                <lightning:button iconName="utility:add" title="Add" onclick="{!c.addOption}"></lightning:button>
            </div>
        </aura:if>

        <!-- Terms of Service -->
        <aura:if isTrue="{!v.WrapperList.AttributeList.Form_Field__r.Data_Record_Id__c == 'QFTERMSOFSERVICE'}">
            <div class="fieldLabel">
                Terms of Service
            </div>
            <c:FieldAttributeButtons WrapperList="{!v.WrapperList}" />
            <div class="textlabel">Options</div>
            <div class="togglebox">
                <lightning:input type="toggle" label="Disable Field" checked="{!v.WrapperList.AttributeList.Hide_Field__c}" messageToggleActive="" messageToggleInactive="" />
            </div>
            <div class="richstyle">
                <lightning:button class="richbutton" label="Edit Agreement Text" onclick="{!c.openRichText}" />
            </div>

            <aura:if isTrue="{!v.termRichText}">
                <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                    <div class="slds-modal__container">
                        <header class="slds-modal__header">
                            <lightning:buttonIcon iconName="utility:close" onclick="{! c.closeModel }" alternativeText="close" variant="bare-inverse" class="slds-modal__close" />
                            <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Agreement Text Block</h2>
                        </header>

                        <lightning:tabset variant="scoped">
                            <lightning:tab label="Edit Rich Text">
                                <lightning:inputRichText formats="['font', 'size', 'bold', 'italic', 'underline', 'strike', 'list', 'indent', 'align', 'link', 'clean', 'table', 
                                'header', 'color', 'background']" value="{! v.WrapperList.AttributeList.Agreement_Text__c}" aura:id="textEditor" placeholder="Type something" />
                            </lightning:tab>
                            <lightning:tab label="Edit HTML Text" onactive="{! c.HtmlTextC }">
                                <lightning:textarea label="HTML Text" value="{! v.HtmlText}" name="Html" onchange="{!c.RichTextC}" />
                            </lightning:tab>
                            <lightning:tab label="Output">
                                <ui:outputRichText class="slds-text-longform" value="{!v.WrapperList.AttributeList.Agreement_Text__c}" />
                            </lightning:tab>
                        </lightning:tabset>


                        <footer class="slds-modal__footer">
                            <lightning:button variant="neutral" label="Cancel" title="Cancel" onclick="{! c.closeModel }" />
                            <lightning:button variant="brand" label="OK" title="OK" onclick="{!c.OutRichC}" />
                        </footer>
                    </div>
                </section>
                <div class="slds-backdrop slds-backdrop_open"></div>
            </aura:if>
        </aura:if>

        <!-- LINK -->
        <aura:if isTrue="{!v.WrapperList.AttributeList.Form_Field__r.Data_Record_Id__c ==  'QFLINK'}">
            <div class="fieldLabel">
                Link
            </div>
            <c:FieldAttributeButtons WrapperList="{!v.WrapperList}" />
            <div class="slider">
                <lightning:slider label="Min no of character" value="{!v.WrapperList.AttributeList.Min_no_of_character__c}" min="0" max="{!v.WrapperList.AttributeList.Max_no_of_character__c - 1}" />
            </div>
            <div class="slider">
                <lightning:slider label="Max no of character" value="{!v.WrapperList.AttributeList.Max_no_of_character__c}" min="{!v.WrapperList.AttributeList.Min_no_of_character__c}" max="256" />
            </div>
            <lightning:button class="resetcharacter" label="Reset Character Limit" variant="brand-outline" onclick="{!c.resetCharacter}" /><br/>
            <div class="textlabel">Options</div>
            <div class="togglebox">
                <lightning:input type="toggle" label="Add Placeholder text:" checked="{!v.WrapperList.AttributeList.Placeholder_text__c}" messageToggleActive="" messageToggleInactive="" />
            </div>
            <aura:if isTrue="{!v.WrapperList.AttributeList.Placeholder_text__c}">
                <div class="plaintext">
                    <lightning:input variant="label-hidden" value="{!v.WrapperList.AttributeList.Placeholder__c}"></lightning:input>
                </div>
            </aura:if>
            <div class="togglebox">
                <lightning:input type="toggle" label="Disable Field" checked="{!v.WrapperList.AttributeList.Hide_Field__c}" messageToggleActive="" messageToggleInactive="" />
            </div>
            <div class="togglebox">
                <lightning:input type="toggle" label="Read only" checked="{!v.WrapperList.AttributeList.Read_Only__c}" messageToggleActive="" messageToggleInactive="" />
            </div>
        </aura:if>

        <!-- Signature -->
        <aura:if isTrue="{!v.WrapperList.AttributeList.Form_Field__r.Data_Record_Id__c == 'QFSIGNATURE'}">
            <div class="fieldLabel">
                Signature
            </div>
            <c:FieldAttributeButtons WrapperList="{!v.WrapperList}" />
        </aura:if>

        <!-- RichText -->
        <aura:if isTrue="{!v.WrapperList.AttributeList.Form_Field__r.Data_Record_Id__c == 'QFRICHTEXT'}">
            <div class="fieldLabel">
                RichText
            </div>
            <c:FieldAttributeButtons WrapperList="{!v.WrapperList}" FieldType="RichText" />
            <div class="richstyle">
                <lightning:button class="richbutton" label="Edit RichText" onclick="{!c.openRichText}" />
            </div>
            <aura:if isTrue="{!v.showRichText}">
                <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                    <div class="slds-modal__container">
                        <header class="slds-modal__header">
                            <lightning:buttonIcon iconName="utility:close" onclick="{! c.closeModel }" alternativeText="close" variant="bare-inverse" class="slds-modal__close" />
                            <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">HTML Block</h2>
                        </header>

                        <lightning:tabset variant="scoped">
                            <lightning:tab label="Edit Rich Text">
                                <lightning:inputRichText formats="['font', 'size', 'bold', 'italic', 'underline', 'strike', 'list', 'indent', 'align', 'link', 'clean', 'table', 
                                'header', 'color', 'background']" value="{! v.WrapperList.AttributeList.RichText__c}" aura:id="editor" placeholder="Type something" />
                            </lightning:tab>
                            <lightning:tab label="Edit HTML Text" onactive="{! c.HtmlTextC }">
                                <lightning:textarea label="HTML Text" value="{! v.HtmlText}" name="Html" onchange="{!c.RichTextC}" />
                            </lightning:tab>
                            <lightning:tab label="Output">
                                <ui:outputRichText class="slds-text-longform" value="{!v.WrapperList.AttributeList.RichText__c}" />
                            </lightning:tab>
                        </lightning:tabset>


                        <footer class="slds-modal__footer">
                            <lightning:button variant="neutral" label="Cancel" title="Cancel" onclick="{! c.closeModel }" />
                            <lightning:button variant="brand" label="OK" title="OK" onclick="{!c.OutRichC}" />
                        </footer>
                    </div>
                </section>
                <div class="slds-backdrop slds-backdrop_open"></div>
            </aura:if>
        </aura:if>

        <!-- Look Up -->
        <aura:if isTrue="{!v.WrapperList.AttributeList.Form_Field__r.Data_Record_Id__c == 'QFLOOKUP'}">
            <div class="fieldLabel">
                Look Up Field
            </div>
            <c:FieldAttributeButtons WrapperList="{!v.WrapperList}" />
            <div class="textlabel">Object Selection</div>
            <div class="styletext">
                <lightning:select aura:id="SobjectList" label="Select Object" name="SobjectList" value="{!v.defvalue}" onchange="{!c.selectObject}">
                    <option>Select Object</option>
                    <aura:iteration items="{!v.allObject}" var="field1">
                        <option text="{!field1.label}" value="{!field1.value}" />
                    </aura:iteration>
                </lightning:select>
            </div>
        </aura:if>

        <!-- Captcha -->
        <aura:if isTrue="{!v.WrapperList.AttributeList.Form_Field__r.Data_Record_Id__c == 'QFCAPTCHA'}">
            <div class="fieldLabel">
                Captcha
            </div>
            <c:FieldAttributeButtons WrapperList="{!v.WrapperList}" />
        </aura:if>

    </aura:if>

    <!-- Form -->
    <aura:if isTrue="{!v.fields == 'form'}">
        <div class="fieldLabel">
            Form Edit
        </div>
        <div class="attributeButton">
            <div class="btnDiv">
                <lightning:button label="Cancel" onclick="{!c.cancelValidation}" />
            </div>
            <div class="btnDiv">
                <lightning:button label="Apply" onclick="{!c.saveFormDetails}" />
            </div>
        </div>
        <aura:iteration items="{!v.formdetail}" var="form">
            <div class="textlabel">Form Details</div>
            <div class="styletext">
                <lightning:input label="Form Title" aura:id="formtitle" value="{!form.Title__c}" required="true" messageWhenValueMissing="Please Fill the Details" />
            </div>
            <div class="styletext">
                <lightning:input label="Description" value="{!form.Description__c}" />
            </div>
            <div class="styletext">
                <div style="float:right;">
                    <lightning:helptext content="To display the form using the Progress bar or Steps"></lightning:helptext>
                </div>
                <div class="plaintext">
                    <lightning:select label="Display Type" value="{!form.Display_Type__c}">
                        <option value="None">None</option>
                        <option value="Progress Bar">Progress Bar</option>
                        <option value="Standard Steps">Standard Steps</option>
                        <option value="Custom Steps">Custom Steps</option>
                        <option value="Page Count">Page Count</option>
                    </lightning:select>
                </div>
            </div>
            <div class="styletext">
                <div class="plaintext">
                    <lightning:select label="Captcha Type" value="{!form.Captcha_Type__c}">
                        <option value="None">None</option>
                        <option value="Normal Captcha">Normal Captcha</option>
                        <option value="Normal Captcha In popup">Normal Captcha In popup</option>
                        <option value="Maths Captcha">Maths Captcha</option>
                        <option value="Slider Captcha">Slider Captcha</option>
                        <option value="Image Captcha">Image Captcha</option>
                    </lightning:select>
                </div>
            </div>
            <div class="togglebox">
                <lightning:input type="toggle" label="Active" checked="{!form.Active__c}" messageToggleActive="" messageToggleInactive="" />
            </div>
        </aura:iteration>
    </aura:if>

    <!-- Page -->
    <aura:if isTrue="{!v.fields == 'page'}">
        <div class="fieldLabel">
            Page Edit
        </div>
        <div class="attributeButton">
            <div class="btnDiv">
                <lightning:button label="Cancel" onclick="{!c.cancelValidation}" />
            </div>
            <div class="btnDiv">
                <lightning:button label="Apply" onclick="{!c.savePageDetails}" />
            </div>
        </div>
        <aura:iteration items="{!v.pagedetail}" var="page">
            <div class="textlabel">Page Details</div>
            <div class="styletext">
                <lightning:input label="Page Title" value="{!page.Title__c}" />
            </div>
            <div class="styletext">
                <lightning:input label="Page Subtitle" value="{!page.Sub_Title__c}" />
            </div>
        </aura:iteration>
    </aura:if>

    <aura:if isTrue="{!v.fields == 'null'}">
        <ui:message title="Information" severity="info" closable="true">
            Click any fields to open validations.
        </ui:message>
    </aura:if>

</aura:component>